---
import { FaCopyright } from "@react-icons/all-files/fa/faCopyright";
import LatestPosts from "../components/blog/LatestPosts.astro";
import Education from "../components/Education";
import FarewellMessage from "../components/FarewellMessage";
import LandingScreen from "../components/LandingScreen.astro";
import Projects from "../components/Projects.astro";
import Technologies from "../components/Technologies";
import Layout from "../layouts/Layout.astro";
import type { Frontmatter } from "../types/frontmatter";
import { sortPostsByPublishDate } from "../utils/blog";
import Footer from "../components/Footer";
import IntelligentFrame from "../components/IntelligentFrame";

let posts = await Astro.glob<Frontmatter>("../../data/blog/*.md");
sortPostsByPublishDate(posts);
posts = posts.slice(0, 5);
---

<Layout dynamicHeader={true}>
  <LandingScreen class="shadow-xl" />
  <main class="px-2 container" id="about">
    <div class="my-24" />
    <div class="container align-middle text-center justify-center">
      <h2 class="text-4xl bg-clip-text text-transparent stroke-white bg-gradient-to-r from-emerald-200 via-emerald-400 to-emerald-600 mb-2.5 px-3 font-mono"><wbr>Projects</h2>
    </div>
    <Projects />

    {/*
      <div class="px-4">
        <LatestPosts posts={posts} />
      </div>
      <FarewellMessage />
    */}
        <div class="my-24" />
    <div class="mb-3" />
  </main>
</Layout>
<style is:global>
  @tailwind components;

  @layer components {
    .blinking-cursor:after {
      content: "|";
      animation: blink 0.1ms infinite step-start;
    }

    @keyframes blink {
      50% {
        opacity: 0;
      }
    }
  }
</style>
